{
  "compilerOptions": {
  
    "target": "es5",                                 
        "module": "ESNext",  
        "lib": ["es6"],               
   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           

    "strict": true,                                                
    "skipLibCheck": true ,
    "moduleResolution": "node"                              
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "ts-node": {
    "esm": true
  }
}
